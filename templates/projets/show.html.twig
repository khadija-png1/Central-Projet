<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Développeurs</th>
            <td>
                {% if projet.developpeur is not empty %}
                    {% for developpeur in projet.developpeur %}
                        {{ developpeur.nom }} {{ developpeur.prenom }}
                        <br>
                        <br>
                    {% endfor %}
                {% else %}
                    Aucun développeur associé à ce projet.
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Technologies</th>
            <td>
                {% if projet.technologie is not empty %}
                    {% for technologie in projet.technologie %}
                        {{ technologie.nom }}
                        <br>
                        <br>
                    {% endfor %}
                {% else %}
                    Aucune technologie associée à ce projet.
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Hébergements</th>
            <td>
                {% if projet.hebergement is not empty %}
                    {% for hebergement in projet.hebergement %}
                        {{ hebergement.fournisseur }}
                        <br>
                        <br>
                    {% endfor %}
                {% else %}
                    Aucun hébergement associé à ce projet.
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Accès au code source</th>
            <td>{{ projet.accesCodeSource }}</td>   
        </tr>
        <tr>
            <th>Accès à l'environnement</th>
            <td>{{ projet.accesEnvironnement }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>
                <div class="d-flex align-items-center">
                    <div class="me-3">{{ projet.url }}&nbsp;&nbsp;</div>
                    <div>
                    <a href="{{ path('projet_ping', { id: projet.id }) }}" class="btn btn-sm btn-outline-info">
                        Tester ici
                    </a>
                    </div>
                </div>
            </td>
   
        </tr>

           {% for label, messages in app.flashes %}
                {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                {% endfor %}
            {% endfor %}
    
 
    </tbody>
</table>
