{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h4 class="text-primary mb-3">Réinitialisez votre mot de passe</h4>
                            {{ form_start(requestForm) }}
                                {% for flash_error in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                                {{ form_row(requestForm.email) }}
                                <div>
                                    <small>
                                        Nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                    </small>
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Envoyer</button>
                                </div>
                                <div class="mt-3 text-center">
                                    <a href="{{ path('app_login') }}">Retour</a>
                                </div>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}