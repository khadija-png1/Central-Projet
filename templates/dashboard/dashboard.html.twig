{% extends 'base_dashboard.html.twig' %}

{% block title %}Tableau de bord {{appName}}{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin grid-margin-lg-0 stretch-card">

            <div class="card">
                    <div class="card-body">
                    <h4 class="card-title"> </h4>
                    <canvas id="pieChart"></canvas>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
    
        $(function() {
            'use strict';

            var options = {
                scales: {
                yAxes: [{
                    ticks: {
                    beginAtZero: true
                    }
                }]
                },
                legend: {
                display: false
                },
                elements: {
                point: {
                    radius: 0
                }
                }

            };

            var doughnutPieData = {
                datasets: [{
                data: [
                    {{ projets|length }},
                    {{ developpeurs|length }},
                    {{ technologies|length }},
                    {{ hebergements|length }},
                ],
                backgroundColor: [
                    '#2D6BC5',
                    '#007BFF',
                    '#004080  ',
                    '#7D3C98',

                ],
                borderColor: [
                    '#2D6BC5',
                    '#007BFF ',
                    '#004080 ',
                    '#7D3C98',
                ],
                }],

                labels: [
                'Projets',
                'DÃ©veloppeurs',
                'Technologies',
                'Heberegemnts'
                ]
            };

            var doughnutPieOptions = {
                responsive: true,
                animation: {
                animateScale: true,
                animateRotate: true
                }
            };

            if ($("#pieChart").length) {
                var pieChartCanvas = $("#pieChart").get(0).getContext("2d");
                var pieChart = new Chart(pieChartCanvas, {
                type: 'pie',
                data: doughnutPieData,
                options: doughnutPieOptions
                });
            }
        });

    </script>
{% endblock %}


